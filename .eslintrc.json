{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "ignorePatterns": ["node_modules/", "content/"],
    "plugins": ["prettier"],
    "extends": [
        "standard",
        "prettier"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "aventum": true,
        "redis": true,
        "server": true,
        "dateLocale": true
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "parser": "babel-eslint",
    "rules": {
        "prettier/prettier": "error"
    }
}